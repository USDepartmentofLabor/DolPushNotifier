<div class="table-responsive">
  <h1 class="d-inline-block">Audits</h1>
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Audit logged at:</th>
        <th scope="col">Audited Model</th>
        <th scope="col">Audited Action</th>
        <th scope="col">Audited Changes</th>
        <th scope="col">Changed Time</th>
        <th colspan="2"></th>
      </tr>                      
    </thead>
    <tbody>
      <% @audits.each do |audit| %>
      <tr>
        <td><%= audit.created_at.strftime("%m-%d-%Y") %></td>
        <td><%= audit.auditable_type %></td>
        <td><%= audit.action %></td>
        <td><%= audit.audited_changes %></td>
        <td><%= audit.created_at  %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>